{% extends 'base.html.twig' %}

{% block body %}
    <h1>Games list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Team1</th>
                <th>Team2</th>
                <th>Score1</th>
                <th>Score2</th>
                <th>Winner</th>
                <th>Posline</th>
                <th>Poscol</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td><a href="{{ path('game_show', { 'id': game.id }) }}">{{ game.id }}</a></td>
                <td>{{ game.team1 }}</td>
                <td>{{ game.team2 }}</td>
                <td>{{ game.score1 }}</td>
                <td>{{ game.score2 }}</td>
                <td>{{ game.winner }}</td>
                <td>{{ game.posLine }}</td>
                <td>{{ game.posCol }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('game_show', { 'id': game.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('game_edit', { 'id': game.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('game_new') }}">Create a new game</a>
        </li>
    </ul>
{% endblock %}
